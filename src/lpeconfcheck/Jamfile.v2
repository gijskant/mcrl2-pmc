project lpeconfcheck
  : source-location .
  : build-dir $(BUILD_TOP)
  : default-build debug
  ;

exe lpeconfcheck
       : lpeconfcheck.cpp
         /libraries/prover//prover
         /libraries/aterm//aterm
       : <source>/root//mcrl2_revision
         <include>.
       ;

include $(TOP)/config.jam ;

explicit install ;

install install
       : lpeconfcheck
       : <dll-path>$(LIB_DIR)
         <location>$(BIN_DIR)
       ;
