project lpeuntime
       : source-location .
       : requirements
          <include>$(BOOST)
       : build-dir $(BUILD_TOP)
       ;

exe lpeuntime
       : lpeuntime.cpp
         squadt_lpeprogram.cpp
       : <source>/libraries/mcrl2_basic//mcrl2_basic
         <source>/libraries/lpe//lpe
         <source>/boost/program_options//boost_program_options
         <source>/boost/filesystem//boost_filesystem
         <source>/site-config//mcrl2_revision.h
         <squadt_support>enable
         <include>.
       ;

install_with_libraries install : lpeuntime ;

