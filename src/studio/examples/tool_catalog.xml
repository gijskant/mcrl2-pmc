<?xml version="1.0" encoding="utf-8"?>
<tool-catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="tool_catalog.xsd">
 <tool name="lpe2lts" identifier="lpe2lts" location="/some/path/bin/lpe2lts">
  <description>A tool computes the instantiation of an LPE.</description>
  <mode category="Translation">
   <object type="input" name="%.lpe" formalism="LPE" default-format="lpe"/>
   <object type="output" name="%.aut" formalism="LTS" default-format="aut">
    <format-selector format="svc">--svc</format-selector>
   </object>
  </mode>
  <mode category="Analysis" selector="--deadlock-detect">
   <description>Performs a deadlock detection and does not store state space</description>
   <object type="input" name="%.lpe" formalism="LPE" default-format="lpe"/>
  </mode>
 </tool>
 <tool name="mcrl22lpe" identifier="mcrl22lpe" location="/some/path/bin/mcrl22lpe">
  <mode category="Translation">
   <description>A tool that transforms mCRL2 specification to an LPE.</description>
   <object type="input" name="%.mcrl2" formalism="mCRL2" default-format="mcrl2"/>
   <object type="output" name="%.lpe" formalism="LPE" default-format="lpe"/>
  </mode>
 </tool>
 <tool name="lpeconstelm" identifier="lpeconstelm" location="/some/path/bin/mcrl22lpe">
  <mode category="Transformation">
   <description>A tool that transforms an LPE to an LPE where constants are eliminated.</description>
   <object type="input" formalism="LPE" default-format="lpe"/>
   <object type="output" formalism="LPE" default-format="lpe"/>
  </mode>
 </tool>
</tool-catalog>

