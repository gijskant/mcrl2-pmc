project wx_extension
       : source-location ../source
       : build-dir $(BUILD_TOP)
       : requirements
          <include>..
       : usage-requirements
          <include>..
       ;

include $(TOP)/build/config.jam ;

obj spinctrlfloat.o
      : spinctrlfloat.cpp
      : <cxxflags>"$(WX_CPPFLAGS)"
      ;

obj colorbutton.o
      : colorbutton.cpp
      : <cxxflags>"$(WX_CPPFLAGS)"
      ;

lib wx_extension
       : colorbutton.o
         spinctrlfloat.o
       : <toolset>darwin:<linkflags>"-undefined dynamic_lookup"
         <os>NT:<link>static
         <os>CYGWIN:<link>static
       :
       : <cxxflags>"$(WX_CPPFLAGS)"
       ;

