project toolset/ltsgraph
       : build-dir $(BUILD_TOP)/ltsgraph
       ;

exe ltsgraph
       : [ glob *.cpp ]
         /libraries//wx_extension
         /libraries//mcrl2_basic
         /libraries//lts
       : <include>.
         <wx>basic
       : <squadt_support>enable
       ;

install_with_libraries install : ltsgraph : <wx>availability <os>MACOSX:<dependency>ltsgraph-bundle ;

install_bundle_on_mac $(TOP)/ltsgraph : ltsgraph ltsgraph.plist ltsgraph.icns ;

