project toolset/ltsgraph
       : build-dir $(BUILD_TOP)/ltsgraph
       ;

exe ltsgraph
       : [ glob *.cpp ]
       : <source>/libraries//wx_extension
         <source>/libraries//mcrl2_basic
         <source>/libraries//lts
