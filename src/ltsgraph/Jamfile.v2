include $(TOP)/config.jam ;

project ltsgraph
       : source-location .
       : build-dir $(BUILD_TOP)
       ;

exe ltsgraph
       : ltsgraph.cpp
         graph_frame.cpp
         label.cpp
         node.cpp
         edge.cpp
         /libraries/temporary//print
         /libraries/lts//lts
       : <source>/root//mcrl2_revision
         <include>.
         <cxxflags>"$(IWX)"
         <linkflags>"$(LWX_BASE)"
       ;

explicit install install-libraries install-binaries ;

alias install
       : install-libraries
         install-binaries
       ;

install install-libraries
       : ltsgraph
       : <install-dependencies>on <install-type>LIB
       : <location>$(LIB_DIR)
       ;

install install-binaries
       : ltsgraph
       : <dll-path>$(LIB_DIR)
         <location>$(BIN_DIR)
       ;
