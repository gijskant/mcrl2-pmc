project lpeinvelm
  : source-location .
  : requirements
     <link>static
  : build-dir $(BUILD_TOP)
  : default-build debug
  ;

exe lpeinvelm
       : lpeinvelm.cpp
         /libraries/prover//prover
         /libraries/aterm//aterm
       : <dependency>/root//revision.h
         <include>.
       ;

include $(TOP)/config.jam ;

explicit install ;

install install
       : lpeinvelm
       : <dll-path>$(LIB_DIR)
         <location>$(BIN_DIR)
       ;
