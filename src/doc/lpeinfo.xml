<?xml version="1.0"?>

<!DOCTYPE refentry PUBLIC "-//OASIS//DTD DocBook XML V4.2//EN" "http://www.oasis-open.org/docbook/xml/4.2/docbookx.dtd"[
<!ENTITY % param SYSTEM "param.xml">
%param;
<!ENTITY lpeinfo "<function>lpeinfo</function>">
<!ENTITY infile "<parameter>INFILE</parameter>">
<!ENTITY opt_h "<option>-h</option>">
<!ENTITY opt_help "<option>--help</option>">
<!ENTITY opt_version "<option>--version</option>">
<!ENTITY opt_p "<option>-p</option>">
<!ENTITY opt_pars "<option>--pars</option>">
<!ENTITY opt_d "<option>-d</option>">
<!ENTITY opt_debug "<option>--debug</option>">
<!ENTITY opt_v "<option>-d</option>">
<!ENTITY opt_verbose "<option>--verbose</option>">

<!ENTITY stdin "<option>STDIN</option>">
<!ENTITY stdout "<option>STDOUT</option>">
]>

<refentry id="lpeinfo">

<refmeta>
  <refentrytitle>lpeinfo</refentrytitle>
  <manvolnum>1</manvolnum>
</refmeta>

<refnamediv>
  <refname>lpeinfo</refname>
  <refpurpose>display basic information about an LPE</refpurpose>
</refnamediv>

<refsynopsisdiv>
  <cmdsynopsis>
    <command>&lpeinfo;</command>
    <arg choice="plain">[[&opt_h; | &opt_help;] | &opt_version; | [ &opt_p; | &opt_pars;] | [ &opt_d; | &opt_debug; ] | [ &opt_v; | &opt_verbose; ]]  </arg>
    <arg choice="plain">[&infile;]</arg>
  </cmdsynopsis>
</refsynopsisdiv>

<refsect1>
  <title>Description</title>
  <para>
    Display basic information about the linear process equation (LPE) in &infile;.
    By default, the following information is shown:
    <itemizedlist>
      <listitem>
        <para>number of summands</para>
      </listitem>
      <listitem>
        <para>number of free variables</para>
      </listitem>
      <listitem>
        <para>number of process parameters</para>
      </listitem>
      <listitem>
        <para>number of actions</para>
      </listitem>
    </itemizedlist>
  </para>
</refsect1>

<refsect1>
  <title>File</title>
  <para>
    <variablelist>
      <varlistentry>
        <term> </term>
        <term>&gt;</term>
          <listitem>
            <para> &lpeinfo; reads from &stdin;, and displays information to &stdout;.
            </para>
          </listitem>
      </varlistentry>
      
      <varlistentry>
        <term>&infile;</term>
          <listitem>
            <para> &lpeinfo; reads from file &infile; and displays information to &stdout;.
            </para>
          </listitem>
      </varlistentry>
    </variablelist>
  </para>
  
  <para>
    Note that &lpeinfo; reads LPE-format.
  </para>

</refsect1>

<refsect1>
  <title>Options</title>
  <para>
    <variablelist>

      <varlistentry>
        <term>&opt_p;</term>
        <term>&opt_pars;</term>
          <listitem>
            <para>display the process parameters of the LPE</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>&opt_h;</term>
        <term>&opt_help;</term>
          <listitem>
            <para>display help information and exit</para>
          </listitem>
      </varlistentry>

      <varlistentry>
        <term>&opt_version;</term>
        <listitem>
          <para>display version information and exit</para>
        </listitem>
      </varlistentry>
      
      <varlistentry>
        <term>&opt_v;</term>
        <term>&opt_verbose;</term>
        <listitem>
          <para>
          Displays short intermediate information during the run of the program.
          </para>
        </listitem>
      </varlistentry>
      
      <varlistentry>
        <term>&opt_d;</term>
        <term>&opt_debug;</term>
        <listitem>
          <para>
          Displays detailed intermediate information during the run of the program.
          </para>
        </listitem>
      </varlistentry>

    </variablelist>
  </para>
</refsect1>

