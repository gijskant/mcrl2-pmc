project lpeformcheck
  : source-location .
  : build-dir $(BUILD_TOP)
  : default-build debug
  ;

exe lpeformcheck
       : lpeformcheck.cpp
         /libraries/prover//prover
       : <source>/root//mcrl2_revision
         <include>.
       ;

include $(TOP)/config.jam ;

explicit install ;

install install
       : lpeformcheck
       : <dll-path>$(LIB_DIR)
         <location>$(BIN_DIR)
       ;
