project squadt/libraries/utilities
    : source-location
       ..
    : build-dir $(BUILD_TOP)
    : requirements
       <use>/boost//headers
       <include>../include
    : usage-requirements
       <use>/boost//headers
       <include>../include
    ;

lib mcrl2_squadt
    : source/mcrl2_squadt.cpp
    : <use>/libraries//mcrl2_basic
      <use>/libraries/sip//sip_tool
      <threading>multi
    :
    : <library>/libraries/sip//sip_tool
      <define>ENABLE_SQUADT_CONNECTIVITY
      <threading>multi
    ;

obj logger.o
    : source/logger.cpp
    ;

alias logger : logger.o : : : ;

alias headers : : : : ;
