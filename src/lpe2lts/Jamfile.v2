project lpe2lts
       : source-location .
       : build-dir $(BUILD_TOP)
       : requirements
          <include>$(BOOST)
       ;

exe lpe2lts
       : lpe2lts.cpp
         /libraries/temporary//dataelm
         /libraries/temporary//nextstate
         /libraries/temporary//mcrl2_basic
         /libraries/temporary//trace
         /libraries/lts//lts
       : <source>/site-config//mcrl2_revision.h
         <squadt_support>enable
       ;

install_with_libraries install : lpe2lts ;
