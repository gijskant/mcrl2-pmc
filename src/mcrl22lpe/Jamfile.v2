project toolset/mcrl22lpe
       : build-dir $(BUILD_TOP)/mcrl22lpe
       ;

obj lin_alt.o
       : lin_alt.cpp
         /libraries//mcrl2_basic
         /libraries//rewrite
       ;

exe mcrl22lpe
       : mcrl22lpe.cpp
         lin_alt.o
         lin_std.cpp
         /libraries//parser
         /libraries//mcrl2_basic
         /libraries//rewrite
         /libraries/parser//alpha
       : <toolset>msvc:<library>/libraries//getopt
       : <squadt_support>enable
       ;

exe lin
       : lin.cpp
         lin_alt.o
         /libraries//parser
         /libraries//mcrl2_basic
         /libraries//rewrite
         /libraries/parser//alpha
       : <toolset>msvc:<library>/libraries//getopt
         <status>experimental
       ;

exe alpha
       : alpha.cpp
         /libraries//parser
         /libraries/parser//alpha
         /libraries//mcrl2_basic
         /libraries//rewrite
       : <toolset>msvc:<library>/libraries//getopt
         <status>experimental
       ;

explicit lin_alt.o ;

