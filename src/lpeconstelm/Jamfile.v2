project lpeconstelm
       : source-location .
       : requirements
          <include>$(BOOST)
       : build-dir $(BUILD_TOP)
       ;

exe lpeconstelm
       : lpeconstelm.cpp
         /libraries/temporary//print
         /libraries/sip//sipt
         /libraries/lpe//lpe
       : <source>/boost/program_options//boost_program_options
         <source>/boost/filesystem//boost_filesystem
         <source>/root//mcrl2_revision
         <define>ENABLE_SQUADT_CONNECTIVITY
         <include>.
       ;

include $(TOP)/config.jam ;

explicit install install-libraries install-binaries ;

alias install
       : install-libraries
         install-binaries
       ;

install install-libraries
       : lpeconstelm
       : <install-dependencies>on <install-type>LIB <location>$(LIB_DIR)
       : release
       ;

stage install-binaries
       : lpeconstelm 
       : <install-type>EXE
         <dll-path>$(LIB_DIR)
         <location>$(BIN_DIR)
       : release
       ;

