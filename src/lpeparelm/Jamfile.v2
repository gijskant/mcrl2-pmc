project lpeparelm
       : source-location .
       : requirements
          <include>$(BOOST)
       : build-dir $(BUILD_TOP)
       ;

exe lpeparelm
       : lpeparelm.cpp
       : <source>/boost/program_options//boost_program_options
         <source>/libraries/temporary//mcrl2_basic
         <source>/libraries/lpe//lpe
         <source>/boost/filesystem//boost_filesystem
         <source>/site-config//mcrl2_revision.h
         <squadt_support>enable
         <include>.
       ;

install_with_libraries install : lpeparelm ;
