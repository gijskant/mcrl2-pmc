project libraries/utilities
       : source-location ..
       : requirements
          <include>../include
       : usage-requirements
          <include>../include
       ;

alias spinctrlfloat : spinctrlfloat.o ;
alias colorbutton   : colorbutton.o ;
alias font_renderer : font_renderer.o ;

obj spinctrlfloat.o : source/spinctrlfloat.cpp : <use>/site-config//wx_base <include>../include/mcrl2/utilities ;
obj colorbutton.o   : source/colorbutton.cpp   : <use>/site-config//wx_base <include>../include/mcrl2/utilities ;
obj font_renderer.o : source/font_renderer.cpp : <use>/site-config//wx_base <include>../include/mcrl2/utilities ;

# mCRL2 specific tool for SQuADt interface
obj squadt_interface
      : source/squadt_interface.cpp
      : <threading>multi
        <use>/libraries/tipi//tool-interface
      :
      : <library>/libraries/tipi//tool-interface
        <toolset>darwin:<framework>Carbon
        <define>ENABLE_SQUADT_CONNECTIVITY
      ;

obj command_line_interfacing
      : source/command_line.cpp
      : <use>/site-config//boost_headers
      ;

mcrl2-library utilities
      : source/aterm_ext.cpp
        source/numeric_string.cpp
        source/info.cpp            # Temporary?
        source/bdd2dot.cpp         # Temporary?
        source/manipulator.cpp     # Temporary?
        /libraries/utilities//command_line_interfacing
      : <use>/site-config//boost_headers
        <use>/libraries/atermpp//headers
        <include>../../core/include      # Circular dependency
        <include>../../data/include      # Circular dependency
      :
      : <library>/libraries//aterm
      ;
