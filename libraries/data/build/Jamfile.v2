project data
       : source-location ..
       : requirements
          <include>../include
       : usage-requirements
          <include>../include
       ;

mcrl2-library data
       : source/enum.cpp
         source/enum_standard.cpp
         source/confluence_checker.cpp
         source/disjointness_checker.cpp
         source/invariant_checker.cpp
         source/invariant_eliminator.cpp
         source/formula_checker.cpp
         [ glob source/rewrite/*.cpp ]
         [ glob source/prover/*.cpp ]
       : <use>/libraries/core//headers
         <use>/libraries/atermpp//headers
         <use>/libraries/utilities//headers
         <use>/site-config//cvc
         <library>/site-config//m               # for rewrite
         <library>/site-config//dynamic_loading # for rewrite
       : <threading>single
       : <library>/libraries/core
         <library>/site-config//cvc
       ;
