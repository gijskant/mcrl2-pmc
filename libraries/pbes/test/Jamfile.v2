project libraries/pbes/test
   : requirements
       <use>/site-config//boost_headers
       <source>/libraries//lps
       <source>/libraries//pbes
       <source>/site-config//boost_program_options
       <source>/site-config//boost_filesystem
       <source>/site-config//boost_system
   ;

include $(TOP)/build/testing/header_test.jam ;

exe generate_lps2pbes_result : generate_lps2pbes_result.cpp ;

test-suite pbes
    :
      [ run parse_test.cpp ]
      [ run txt2pbes_test.cpp ]
      [ run constelm_test.cpp ]
      [ run remove_parameters_test.cpp ]
      #[ run pbes_solve_test.cpp ]
      [ run parelm_test.cpp ]
      [ run lps2pbes_test.cpp ]
      [ run pbes_test.cpp ]
      [ run bisimulation_test.cpp ]
      [ run rewriter_test.cpp ]
      [ run gauss_elimination_test.cpp ]
      [ run pbes_expression_test.cpp ]
      [ run normalize_test.cpp ]
      [ compile-headers ../include ]
    ;

install dist
    :
      generate_lps2pbes_result
    :
      <location>dist
    ;

explicit dist ;
