project atermpp
       : source-location ../source
       : build-dir $(BUILD_TOP)
       ;

alias atermpp.main
       :
       : <use>/boost//headers
         <use>/libraries/aterm//headers
       :
       : <use>/boost//headers
       ;

alias atermpp
       : atermpp.main
       : <link>static
       :
       : <dependency>/libraries//aterm
       ;

alias atermpp
       : # /libraries//mcrl2
       : <link>shared
       :
       : <include>../include
       ;

alias headers
       : [ path.glob-tree include/mcrl2 : *.h *.hpp : .svn ]
       :
       :
       : <include>../include
         <use>/libraries/aterm//headers
       ;

explicit atermpp.main ;
