import testing ;

project libraries/aterm/test
   : requirements
       <use>/site-config//boost
       <use>/libraries//atermpp
       <toolset>msvc:<asynch-exceptions>on
       <source>/libraries//aterm
   ;

test-suite aterm
    :
      [ run aterm_traits_test.cpp ]
      [ run make_match_test.cpp ]
      [ run aterm_list_test.cpp ]
      [ run aterm_balanced_tree_test.cpp ]
      [ run aterm_test.cpp ]
      [ run function_test.cpp ]
      [ run make_term.cpp ]
      [ run constructors.cpp ]
      [ run is_quoted.cpp ]
      [ run algorithm_test.cpp ]
      [ run operators.cpp ]
      [ run replace_test.cpp ]
      [ run table_test.cpp ]
      [ run indexed_set_test.cpp ]
      [ run dictionary_test.cpp ]
    ;
