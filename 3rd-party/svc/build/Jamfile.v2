project svc
       : source-location ../source
       : build-dir $(BUILD_TOP)
       : requirements
          <toolset>darwin:<cflags>-std=c99
          <toolset>gcc:<cflags>-std=c99
          <include>../include/svc
       : usage-requirements
          <include>../include/svc
       ;

alias svc.main
       : blocklist.c
         code.c
         compress.c
         hashtable.c
         huffman.c
         lz.c
         ptable.c
         svc1.c
         svc2.c
       : <toolset>darwin:<cflags>"-fno-common"
         <use>/libraries/aterm//headers
       : <threading>single
       ;

lib svc
       : svc.main
       : <link>static
       :
       : <library>/libraries//aterm
       ;

alias svc
       : /libraries//mcrl2
       : <link>shared
       ;

alias svc.alias
       : svc.main
       : <use>headers
       ;

alias headers : : : : <include>../include <use>/libraries/aterm//headers ;

explicit svc.main svc.alias ;
