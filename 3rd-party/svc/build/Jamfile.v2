project svc
       : source-location ../source
       : requirements
          <toolset>darwin:<cflags>-std=c99
          <toolset>gcc:<cflags>-std=c99
          <include>../include
       : usage-requirements
          <include>../include
       ;

mcrl2-library svc
       : blocklist.c
         code.c
         compress.c
         hashtable.c
         huffman.c
         lz.c
         ptable.c
         svc1.c
         svc2.c
       : <toolset>darwin:<cflags>"-fno-common"
         <use>/libraries/aterm//headers
       :
       : <library>/libraries//aterm
       ;

install-libraries svc ;
