# Installation directories
prefix             = @PREFIX_DIR@
exec_prefix        = @EXEC_PREFIX_DIR@
bindir             = @bindir@
libdir             = @libdir@
datadir            = @datarootdir@
datarootdir        = @datarootdir@
includedir         = @includedir@
infodir            = @infodir@
mandir             = @mandir@

# Boost Build configuration
BJAM               = @abs_top_srcdir@/bin/bjam
BOOST_BUILD       := $(BJAM) @BUILD_EXTRA@ @BUILD_VARIANT@ --prefix=${prefix} --exec-prefix=${exec_prefix}

# xmlto
USE_XMLTO          = @USE_XMLTO@
XMLTO              = @XMLTO@

