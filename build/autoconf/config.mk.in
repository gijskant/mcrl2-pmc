HOST_OS            = "@HOST_OS@"

# Installation directories
prefix             = "@PREFIX_DIR@"
exec_prefix        = "@EXEC_PREFIX_DIR@"
bindir             = "@bindir@"
libdir             = "@libdir@"
datadir            = "@datarootdir@"
datarootdir        = "@datarootdir@"
includedir         = "@includedir@"
infodir            = "@infodir@"
mandir             = "@mandir@"

# Boost Build configuration
BJAM               = @BJAM@
BOOST_BUILD       := $(BJAM) --prefix=${prefix}

DOCBOOK_XSL_PREFIX = "@abs_top_srcdir@/3rd-party/docbook/xsl"
XSLTPROC           = XML_CATALOG_FILES=$(DOCBOOK_XSL_PREFIX)/catalog.xml @XSLTPROC@

ifneq ($(XSLTPROC),XML_CATALOG_FILES=$(DOCBOOK_XSL_PREFIX)/catalog.xml)
  MAN_MANIFEST = "@abs_top_srcdir@/build/bin/MAN.MANIFEST"
endif

