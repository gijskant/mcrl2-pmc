project toolset/xsim/plugins/garage
       : build-dir $(BUILD_TOP)/xsim/garage
       : requirements <include>../..
       : default-build <threading>multi
       ;

alias xsim_garage_view : : <wx>no ;
alias xsim_garage_view : : <wx>yes <link>static ;

lib xsim_garage_view
       : garageframe.cpp
         garagecanvas.cpp
         visutils.cpp
         /libraries//lps
         /tools/xsim//sim_base_gui
         /site-config//wx_gl
       : <define>GARAGEFRAMEDLL
         <toolset>darwin:<bundle>yes
         <wx>yes
         <link>shared
         <runtime-link>shared
       ;

alias garageframe : : <wx>no ;

exe garageframe
       : xmain.cpp
         garageframe.cpp
         garagecanvas.cpp
         visutils.cpp
         /site-config//wx_gl
       : <library>/libraries//lps
         <wx>yes
       ;

explicit garageframe ;

