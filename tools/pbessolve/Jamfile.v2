project toolset/pbessolve
       : build-dir $(BUILD_TOP)/pbessolve
       ;

obj gauss.o
       : gauss.cpp
         /libraries//lps
         /libraries//pbes
         /site-config//boost_program_options
       : <include>.
       ;

obj sort_instantiator.o
       : sort_instantiator.h sort_instantiator.cpp
         /libraries//lps
         /libraries//pbes
         /site-config//boost_program_options
       : <include>.
       ;

exe pbessolve
       : pbessolve.cpp
	 sort_instantiator.o
	 gauss.o
	 /libraries//lps
         /libraries//pbes
         /site-config//boost_program_options
       : <include>.
       ;

exe txt2pbes
       : txt2pbes.cpp
         /libraries//lps
         /libraries//pbes
       : <include>.
         <toolset>msvc:<library>/libraries//getopt
       ;

install-binaries install
       : pbessolve txt2pbes
       :
       : <status>experimental
       ;
