project toolset/mcrl22lps/test
     : source-location .
     ;

alias mcrl22lps-test-tool : $(TOP)/tools/mcrl22lps//mcrl22lps ;

# run mcrl22lps on all mcrl2 files located somewhere in $(TOP)/examples
#
#  the output files get the extension lps and are located in $(BUILD_TOP)
#
test-suite mcrl22lps
    : [ run_tool_on_examples mcrl22lps-test-tool mcrl22lps lps : : $(TOP)/examples . : mcrl2 ]
    ;

